FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY pyproject.toml .

# Set PYTHONPATH
ENV PYTHONPATH=/app/src

EXPOSE 8000

WORKDIR /app/src/api
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]